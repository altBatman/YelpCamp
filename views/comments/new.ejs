<%- include("../partials/header") %>

<div class="container">
    <h1 style="text-align: center;">Add New Comment to <%=campground.name%> </h1>
    <div class="form-row">
        <div style="width: 30%; margin: 0 auto;">
            <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
                <div class="form-group">
                    <textarea class="form-control" name="comment[text]" placeholder="Comment" rows="6"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-outline-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/campgrounds/<%= campground._id %>"> << Back </a>
        </div>
    </div>
</div>