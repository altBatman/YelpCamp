<%- include("../partials/header") %>

<div class="container">
    <h1 style="text-align: center;">Edit Comment</h1>
    <div class="form-row">
        <div style="width: 30%; margin: 0 auto">
            <form action="/campgrounds/<%=campground_id%>/comments/<%=comment._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <textarea class="form-control" type="text" name="comment[text]" value="<%= comment.text %> " rows="6"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-outline-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/campgrounds"> << Back </a>
        </div>
    </div>
</div>
